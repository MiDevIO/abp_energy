<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/cvInspeksi"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    TXT Tanggal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bgCancel"
            android:weightSum="2">
            <!--        TV Jam Inspeksi-->
            <TextView
                android:id="@+id/tvJamInspeksi"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="16:00:00"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <!--        TV Jam Inspeksi-->
            <!--        TV Tanggal Inspeksi-->
            <TextView
                android:id="@+id/tvTglInspeksi"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="01 January 2021"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <!--        TV Tanggal Inspeksi-->
        </LinearLayout>
        <!--    TXT Tanggal-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <!--    Data Temuan-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <!--    Nama Inspeksi-->
                <TextView
                    android:id="@+id/tvLokasi"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jalan Hauling"/>
        </LinearLayout>
        <!--    Data Temuan-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"/>
        <!--    Bahaya-->
        <TextView
            android:background="@color/bgCancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saran"/>
        <!--TV Deskripsi-->
        <TextView
            android:id="@+id/tvSaran"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terdapat genangan air dari kolam yang penuh lumpur,
        air melimpas ke badan jalan hauling"
            />
        <!--    TV Deskripsi-->
        <!--    Bahaya-->
        <!--    Status-->
        <TextView
            android:id="@+id/tvValidasi"
            android:textColor="@color/white"
            android:background="@color/bgCancel"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiSetujui Oleh Safety"
            />
        <!--    Status-->
    </LinearLayout>
</androidx.cardview.widget.CardView>