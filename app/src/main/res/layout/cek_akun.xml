<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/white"    android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        android:layout_marginBottom="10dp"        android:text="Akun"        android:background="@color/colorPrimaryDark"        android:textColor="@color/white"        android:gravity="center"/>    <LinearLayout        android:id="@+id/lnUser"        android:padding="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_weight="0.5"            android:layout_height="wrap_content"            android:text="Username"/>        <TextView            android:id="@+id/tvUserCek"            android:layout_weight="1.5"            android:layout_marginLeft="20dp"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:text="admin"/>    </LinearLayout>    <LinearLayout        android:id="@+id/lnNama"        android:padding="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_weight="0.5"            android:layout_height="wrap_content"            android:text="Nama"/>        <TextView            android:id="@+id/tvNamaCek"            android:layout_weight="1.5"            android:layout_marginLeft="20dp"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:text="Boris"/>    </LinearLayout>    <LinearLayout        android:id="@+id/lnNik"        android:padding="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_weight="0.5"            android:layout_height="wrap_content"            android:text="Nik"/>        <TextView            android:id="@+id/tvNikCek"            android:layout_weight="1.5"            android:layout_marginLeft="20dp"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:text="18060207"/>    </LinearLayout>    <LinearLayout        android:id="@+id/lnEmail"        android:padding="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_weight="0.5"            android:layout_height="wrap_content"            android:text="Email"/>        <TextView            android:id="@+id/tvEmail"            android:layout_weight="1.5"            android:layout_marginLeft="20dp"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:text="admin@it.com"/>    </LinearLayout>    <LinearLayout        android:id="@+id/lnPerusahaan"        android:padding="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_weight="0.5"            android:layout_height="wrap_content"            android:text="Perusahaan"/>        <TextView            android:id="@+id/tvPerusahaanCek"            android:layout_weight="1.5"            android:layout_marginLeft="20dp"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:text="ABP"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:orientation="horizontal">        <com.google.android.material.button.MaterialButton            android:id="@+id/btnSimpan"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_margin="10dp"            android:layout_weight="1"            android:textAllCaps="false"            style="@style/TextAppearance.MaterialComponents.Button"            android:text="Reset Password"            android:backgroundTint="@color/bgTotal"            android:textColor="@color/white" />        <com.google.android.material.button.MaterialButton            android:textAllCaps="false"            android:id="@+id/btnCancel"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_margin="10dp"            android:layout_weight="1"            style="@style/TextAppearance.MaterialComponents.Button"            android:text="Batal"            android:backgroundTint="@color/bgCancel"            android:textColor="@color/white" />    </LinearLayout></LinearLayout>