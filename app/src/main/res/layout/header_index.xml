<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/rvTop"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorPrimary"    android:orientation="vertical"    android:weightSum="2">    <RelativeLayout        android:id="@+id/cardViewContainer"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:layout_marginLeft="24dp"        android:layout_marginTop="100dp"        android:layout_marginRight="24dp">        <androidx.cardview.widget.CardView            android:id="@+id/cvProfile"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="50dp"            app:cardBackgroundColor="#FFFFFF"            app:cardCornerRadius="8dp"            app:cardElevation="0dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:padding="20dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <LinearLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="1"                        android:orientation="vertical"                        android:paddingRight="25dp">                        <com.facebook.shimmer.ShimmerFrameLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content">                            <TextView                                android:background="@android:color/darker_gray"                                android:textColor="@android:color/darker_gray"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="center"                                android:text="Hazard Report" />                        </com.facebook.shimmer.ShimmerFrameLayout>                        <com.facebook.shimmer.ShimmerFrameLayout                            android:id="@+id/shimmerHazardUser"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="5dp"                            android:gravity="center"                            >                            <TextView                                android:background="@android:color/darker_gray"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="center"                                android:textSize="20sp"                                android:textStyle="bold" />                        </com.facebook.shimmer.ShimmerFrameLayout>                    </LinearLayout>                    <LinearLayout                        android:layout_width="0dp"                        android:layout_height="match_parent"                        android:layout_weight="1"                        android:orientation="vertical"                        android:paddingLeft="25dp">                        <com.facebook.shimmer.ShimmerFrameLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content">                            <TextView                                android:background="@android:color/darker_gray"                                android:textColor="@android:color/darker_gray"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="center"                                android:text="Inspeksi" />                        </com.facebook.shimmer.ShimmerFrameLayout>                        <com.facebook.shimmer.ShimmerFrameLayout                            android:id="@+id/shimmerInspeksiUser"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_margin="5dp"                            android:gravity="center"                            >                            <TextView                                android:background="@android:color/darker_gray"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:gravity="center"                                android:textSize="20sp"                                android:textStyle="bold" />                        </com.facebook.shimmer.ShimmerFrameLayout>                    </LinearLayout>                </LinearLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:id="@+id/shimmerView"                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                <View                    android:layout_width="match_parent"                    android:layout_height="3dp"                    android:background="@android:color/darker_gray" />                </com.facebook.shimmer.ShimmerFrameLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:id="@+id/shimmerUserName"                    android:layout_width="200dp"                    android:layout_height="25dp"                    android:layout_margin="5dp"                    android:layout_gravity="center_horizontal"                    >                    <TextView                        android:background="@android:color/darker_gray"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:textColor="@color/colorPrimaryDark"                        android:textSize="25sp"                        android:textStyle="bold" />                </com.facebook.shimmer.ShimmerFrameLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:id="@+id/shimmerNIK"                    android:layout_width="100dp"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:layout_gravity="center_horizontal"                    >                    <TextView                        android:layout_width="100dp"                        android:layout_height="wrap_content"                        android:gravity="center"                        android:background="@android:color/darker_gray"                        android:textColor="@color/colorPrimary" />                </com.facebook.shimmer.ShimmerFrameLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:layout_width="match_parent"                    android:layout_height="3dp"                    android:layout_marginLeft="98dp"                    android:layout_marginRight="98dp"                    android:layout_marginBottom="10dp"                    android:id="@+id/shimmerView1"                    >                <View                    android:layout_width="match_parent"                    android:layout_height="3dp"                    android:background="@android:color/darker_gray" />                </com.facebook.shimmer.ShimmerFrameLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:id="@+id/shimmerSection"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    >                    <View                        android:layout_width="match_parent"                        android:layout_height="14sp"                        android:background="@android:color/darker_gray"/>                </com.facebook.shimmer.ShimmerFrameLayout>                <com.facebook.shimmer.ShimmerFrameLayout                    android:id="@+id/shimmerCompany"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_margin="5dp"                    android:layout_gravity="center_horizontal">                    <View                        android:layout_width="150dp"                        android:layout_height="18dp"                        android:background="@android:color/darker_gray"/>                </com.facebook.shimmer.ShimmerFrameLayout>            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="90dp"            android:layout_height="90dp"            android:layout_centerHorizontal="true"            android:clickable="true"            android:foreground="?android:attr/selectableItemBackground"            app:cardBackgroundColor="@color/colorPrimary"            app:cardCornerRadius="45dp"            app:cardElevation="0dp">            <com.facebook.shimmer.ShimmerFrameLayout                android:id="@+id/shimmerProfileImage"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_margin="5dp"                android:padding="3dp"                >                <de.hdodenhof.circleimageview.CircleImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="@drawable/circle_shimmer"                    android:src="@drawable/circle_shimmer" />            </com.facebook.shimmer.ShimmerFrameLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:visibility="gone"            android:id="@+id/cvImage"            android:layout_width="90dp"            android:layout_height="90dp"            android:layout_centerHorizontal="true"            android:clickable="true"            android:foreground="?android:attr/selectableItemBackground"            app:cardBackgroundColor="@color/colorPrimary"            app:cardCornerRadius="45dp"            app:cardElevation="0dp">            <de.hdodenhof.circleimageview.CircleImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_margin="5dp"                android:background="@drawable/cirle_img"                android:padding="3dp"                android:id="@+id/fotoProfile"                android:scaleType="centerCrop"                android:src="@drawable/abp_ic" />        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:visibility="gone"            android:id="@+id/cvBarcodeProfile"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_alignTop="@+id/cvImage"            android:layout_alignParentEnd="true"            android:layout_marginTop="25dp"            android:layout_marginRight="20dp"            android:clickable="true"            android:foreground="?android:attr/selectableItemBackground"            app:cardBackgroundColor="@color/colorPrimary"            app:cardCornerRadius="10dp"            app:cardElevation="10dp">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_margin="2dp"                android:background="@drawable/barcode_bg"                android:padding="1dp"                android:scaleType="fitCenter"                android:src="@drawable/ic_baseline_qr_code_2_24" />        </androidx.cardview.widget.CardView>    </RelativeLayout></RelativeLayout>