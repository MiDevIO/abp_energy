<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    >    <TextView        android:id="@+id/hazardDoalogTitle"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text=""        android:gravity="center_vertical|center_horizontal"        android:padding="10dp"        android:background="@color/colorPrimaryDark"        android:textColor="@color/white"        />    <com.google.android.material.textfield.TextInputLayout        android:padding="10dp"        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"        android:layout_width="match_parent"        android:id="@+id/tilDeskripsi"        android:layout_height="wrap_content">        <com.google.android.material.textfield.TextInputEditText            android:minLines="10"            android:gravity="top"            android:maxLines="10"            android:scrollbars="vertical"            android:imeOptions="actionDone"            android:id="@+id/inDeskripsi"            android:layout_width="match_parent"            android:layout_height="match_parent"/>    </com.google.android.material.textfield.TextInputLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <com.google.android.material.button.MaterialButton            android:id="@+id/dialogSave"            android:layout_width="0dp"            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"            android:backgroundTint="@color/colorPrimary"            android:layout_margin="3dp"            android:layout_weight="1"            android:layout_height="match_parent"            android:text="Simpan"/>        <com.google.android.material.button.MaterialButton            android:id="@+id/dialogCancel"            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"            android:backgroundTint="@color/bgCancel"            android:layout_width="0dp"            android:layout_margin="3dp"            android:layout_weight="1"            android:layout_height="match_parent"            android:text="Batal"/>    </LinearLayout></LinearLayout>